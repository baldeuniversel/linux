#!/bin/bash

# postinst script for lumus
#

set -e

# For setting the service linked to the script that gives the proper permissions to the user(admin) at each boot

sudo systemctl enable at-boot-lumus.service  &> /dev/null
sudo systemctl daemon-reload 2> /dev/null
sudo systemctl start at-boot-lumus.service 2> /dev/null
echo "~"
echo ""
tput setaf 2; tput bold;echo "By BaldÃ© ~" `tput sgr0` 2> /dev/null

exit 0
